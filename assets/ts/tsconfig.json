{
    "compilerOptions": {
        "target": "es6", // Specify ECMAScript target version
        "module": "amd", // Specify module code generation
        "moduleResolution": "node", // Module resolution strategy
        "outDir": "../js/app", // Output directory for compiled files
        "sourceMap": true, // Generate source map (.js.map) files
        "strict": true, // Enable strict type-checking
        "esModuleInterop": true, // Enables interop between CommonJS and ES Modules
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules" // Exclude the node_modules directory
    ]
}